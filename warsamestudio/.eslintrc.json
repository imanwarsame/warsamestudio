{
	"parser": "@typescript-eslint/parser",
	"plugins": [
	  "@typescript-eslint"
	],
  "extends": [
	"next/core-web-vitals",
	"eslint:recommended",
	"plugin:@typescript-eslint/recommended"
],
  "rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"windows"
		],
		"quotes": [
			"error",
			"single"
		],
		"react/prop-types": 0,
		"semi": [
			"error",
			"always"
		],
		"eqeqeq": "error",
		"no-trailing-spaces": "error",
		"object-curly-spacing": [
			"error", "always"
		],
		"arrow-spacing": [
			"error", { "before": true, "after": true }
		],
		"no-unused-vars": "off",
		"@typescript-eslint/no-unused-vars": ["error"]
	}
}